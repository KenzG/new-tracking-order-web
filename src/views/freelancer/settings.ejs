<div class="max-w-4xl mx-auto py-16 px-6">
  <div class="bg-light card-border rounded-lg p-8">
    <h1 class="text-3xl font-bold text-slate-900 mb-8">⚙️ Settings</h1>

    <div class="space-y-6">
      <!-- General Settings -->
      <div class="bg-white rounded-lg p-6 border border-slate-200">
        <h2 class="text-xl font-semibold text-slate-900 mb-4">General Settings</h2>
        <form class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Full Name</label>
            <input type="text" value="<%= user.name || '' %>" class="w-full rounded-md border border-slate-300 px-3 py-2" placeholder="Enter your name" />
          </div>
          
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Email Address</label>
            <input type="email" value="<%= user.email %>" class="w-full rounded-md border border-slate-300 px-3 py-2" disabled />
            <p class="text-xs text-slate-500 mt-1">Email cannot be changed</p>
          </div>
        </form>
      </div>

      <!-- Security Settings -->
      <div class="bg-white rounded-lg p-6 border border-slate-200">
        <h2 class="text-xl font-semibold text-slate-900 mb-4">Security</h2>
        <div class="space-y-3">
          <button type="button" class="w-full md:w-auto px-4 py-2 bg-slate-600 text-white rounded-lg font-medium hover:bg-slate-700 transition">
            Change Password
          </button>
          <p class="text-sm text-slate-600">Password reset functionality coming soon</p>
        </div>
      </div>

      <!-- Notifications Settings -->
      <div class="bg-white rounded-lg p-6 border border-slate-200">
        <h2 class="text-xl font-semibold text-slate-900 mb-4">Notifications</h2>
        <div class="space-y-3">
          <label class="flex items-center gap-3">
            <input type="checkbox" checked class="w-4 h-4" />
            <span class="text-slate-700">Notify me when client comments</span>
          </label>
          <label class="flex items-center gap-3">
            <input type="checkbox" checked class="w-4 h-4" />
            <span class="text-slate-700">Notify me when order status changes</span>
          </label>
          <label class="flex items-center gap-3">
            <input type="checkbox" checked class="w-4 h-4" />
            <span class="text-slate-700">Weekly summary email</span>
          </label>
        </div>
      </div>

      <!-- Danger Zone -->
      <div class="bg-red-50 rounded-lg p-6 border border-red-200">
        <h2 class="text-xl font-semibold text-red-900 mb-4">⚠️ Danger Zone</h2>
        <button type="button" class="px-4 py-2 bg-red-600 text-white rounded-lg font-medium hover:bg-red-700 transition">
          Delete Account
        </button>
        <p class="text-sm text-red-700 mt-2">This action cannot be undone</p>
      </div>

      <!-- Save Changes -->
      <div class="flex gap-3">
        <button type="button" class="px-6 py-2 bg-teal-600 text-white rounded-lg font-medium hover:bg-teal-700 transition">
          Save Changes
        </button>
        <a href="/" class="px-6 py-2 bg-slate-300 text-slate-700 rounded-lg font-medium hover:bg-slate-400 transition">
          Cancel
        </a>
      </div>
    </div>
  </div>
</div>
