<div class="max-w-4xl mx-auto py-16 px-6">
  <div class="bg-light card-border rounded-lg p-8">
    <h1 class="text-3xl font-bold text-slate-900 mb-8">ðŸ‘¤ My Profile</h1>

    <div class="space-y-6">
      <!-- Profile Card -->
      <div class="bg-white rounded-lg p-6 border border-slate-200">
        <h2 class="text-xl font-semibold text-slate-900 mb-4">Profile Information</h2>
        
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Name</label>
            <p class="text-lg text-slate-900"><%= user.name || 'Not set' %></p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Email</label>
            <p class="text-lg text-slate-900"><%= user.email %></p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Role</label>
            <p class="text-lg text-slate-900">
              <span class="px-3 py-1 rounded-full text-sm font-medium bg-teal-100 text-teal-700">
                <%= user.role %>
              </span>
            </p>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-slate-700 mb-2">Member Since</label>
            <p class="text-lg text-slate-900"><%= new Date(user.createdAt).toLocaleDateString() %></p>
          </div>
        </div>
      </div>

      <!-- Account Stats -->
      <div class="bg-white rounded-lg p-6 border border-slate-200">
        <h2 class="text-xl font-semibold text-slate-900 mb-4">Account Stats</h2>
        <p class="text-slate-600 text-sm">More details coming soon...</p>
      </div>

      <!-- Edit Profile Button -->
      <div class="flex gap-3">
        <button type="button" class="px-6 py-2 bg-teal-600 text-white rounded-lg font-medium hover:bg-teal-700 transition">
          Edit Profile
        </button>
        <a href="/" class="px-6 py-2 bg-slate-300 text-slate-700 rounded-lg font-medium hover:bg-slate-400 transition">
          Back to Dashboard
        </a>
      </div>
    </div>
  </div>
</div>
